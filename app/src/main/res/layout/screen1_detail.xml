<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/buttontext"
    android:outlineProvider="paddedBounds"
    tools:context=".fragment.Mainscreen">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tUpper"
            style="@style/text1"
            android:layout_width="282dp"
            android:layout_height="92dp"
            android:text="@string/upper_limit"
            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="152dp" />

        <TextView
            android:id="@+id/tLow"
            style="@style/text1"
            android:layout_width="282dp"
            android:layout_height="94dp"
            android:text="@string/lower_limit"
            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="264dp" />

        <Switch
            android:id="@+id/switch2"
            style="@style/TextAppearance.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/layout"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="328dp"
            tools:layout_editor_absoluteY="152dp" />

        <TextView
            android:id="@+id/rUpp"
            style="@style/text1"
            android:layout_width="282dp"
            android:layout_height="95dp"
            android:text="@string/upper_limit"
            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="472dp" />

        <TextView
            android:id="@+id/rLow"
            style="@style/text1"
            android:layout_width="287dp"
            android:layout_height="93dp"
            android:text="@string/lower_limit"
            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="577dp" />

        <EditText
            android:id="@+id/t_upper_limit"
            android:layout_width="91dp"
            android:layout_height="41dp"
            android:layout_gravity="center_horizontal"
            tools:layout_editor_absoluteX="134dp"
            tools:layout_editor_absoluteY="517dp" />

        <EditText
            android:id="@+id/t_lower_limit"
            android:layout_width="87dp"
            android:layout_height="39dp"
            android:layout_gravity="center_horizontal"
            android:hint="@string/lower_limit"
            tools:layout_editor_absoluteX="138dp"
            tools:layout_editor_absoluteY="299dp" />

        <EditText
            android:id="@+id/r_upper_limit"
            android:layout_width="85dp"
            android:layout_height="41dp"
            android:layout_gravity="center_horizontal"


            tools:layout_editor_absoluteX="140dp"
            tools:layout_editor_absoluteY="190dp" />

        <EditText
            android:id="@+id/r_lower_limit"
            android:layout_width="91dp"
            android:layout_height="42dp"
            android:layout_gravity="center_horizontal"

            tools:layout_editor_absoluteX="134dp"
            tools:layout_editor_absoluteY="616dp" />

        <Button
            android:id="@+id/btnNext"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"

            android:background="@drawable/button"
            android:fontFamily="@font/roboto"
            android:padding="10dp"


            android:text="@string/next"
            android:textColor="@color/colorPrimaryDark"
            tools:layout_editor_absoluteX="312dp"
            tools:layout_editor_absoluteY="680dp" />

        <Switch
            android:id="@+id/switch6"
            style="@style/TextAppearance.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/layout"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="328dp"
            tools:layout_editor_absoluteY="577dp" />

        <Switch
            android:id="@+id/switch5"
            style="@style/TextAppearance.AppCompat.Button"
            android:layout_width="69dp"
            android:layout_height="45dp"
            android:layout_gravity="right"
            android:background="@drawable/layout"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="331dp"
            tools:layout_editor_absoluteY="472dp" />

        <Switch
            android:id="@+id/switch3"
            style="@style/TextAppearance.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/layout"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="328dp"
            tools:layout_editor_absoluteY="272dp" />

        <Switch
            android:id="@+id/switch4"
            style="@style/TextAppearance.AppCompat.Button"
            android:layout_width="388dp"
            android:layout_height="64dp"
            android:layout_gravity="right"
            android:background="@drawable/layout2"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="@string/relative_humidity"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="21dp"
            tools:layout_editor_absoluteY="381dp" />

        <Switch
            android:id="@+id/switch1"
            style="@style/TextAppearance.AppCompat.Button"
            android:layout_width="389dp"
            android:layout_height="59dp"
            android:layout_gravity="right"
            android:background="@drawable/layout2"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="@string/Temprature"
            android:textSize="20sp"

            tools:ignore="RtlHardcoded"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="73dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>